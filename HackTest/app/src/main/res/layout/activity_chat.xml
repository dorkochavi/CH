<?xml version="1.0" encoding="utf-8"?>
<com.hak.hacktest.activities.util.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context="com.hak.hacktest.activities.ChatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transpernt_black"></RelativeLayout>


    <!--android:background="#abf1f1ef"-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d4d5d6"
        android:id="@+id/send_message_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:inputType="textMultiLine"
            android:hint="Type a message..."
            android:background="#fff"
            android:layout_marginTop="1dp"
            android:ems="100"
            android:id="@+id/message_continer"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="30dp"
            android:layout_marginTop="1dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:id="@+id/send_button"
            android:src="@drawable/send"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/transparent"
        android:id="@+id/top">




        <TextView
            android:text="userName"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="17dp"
            android:maxLength="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/circale_image"
            android:layout_toEndOf="@+id/circale_image" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back"
            android:id="@+id/back"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp" />




        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/main_image_login"
            android:id="@+id/circale_image"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"

            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/back"
            android:layout_toEndOf="@+id/back" />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/menu_point"
            android:id="@+id/menu"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:text="Typing ..."
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/typing"
            android:layout_marginBottom="-4dp"
            android:layout_alignBottom="@+id/circale_image"
            android:layout_alignLeft="@+id/user_name"
            android:layout_alignStart="@+id/user_name" />


    </RelativeLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/main_image_login"
        android:id="@+id/preview_image"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="preview_description "
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_below="@id/preview_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/preview_description" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chat_list"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp"
        android:layout_below="@id/top"
        android:layout_above="@id/send_message_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




</com.hak.hacktest.activities.util.CustomLayout>
